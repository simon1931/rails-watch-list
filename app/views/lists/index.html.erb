<div class="container">
  <div class="banner">
    <h1>Lists</h1>
    <img alt="List movies" width="200" src="https://images.unsplash.com/photo-1517604931442-7e0c8ed2963c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" >
  </div>
  <div class="<%= @lists.length < 3 ? "list" : "list-more-than4"%> mini-container">
      <% @lists.each do |list| %>
        <div class="carte">
          <img alt="Lists" width="200" src="https://source.unsplash.com/random">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
  </div>
  <%= link_to "New List", new_list_path, class: "btn btn-primary" %>
</div>
